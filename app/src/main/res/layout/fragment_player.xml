<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.ui.player.PlayerFragment">

    <TextView
        android:id="@+id/tvPlaylist"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_big"
        android:gravity="center"
        android:text="@string/library_local_songs"
        android:textAppearance="?attr/textAppearanceBody1"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/glEnd"
        app:layout_constraintStart_toStartOf="@id/glStart"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivSongCover"
        android:layout_width="0dp"
        android:layout_height="@dimen/player_song_cover_size"
        android:layout_marginTop="@dimen/spacing_big"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="@id/glEnd"
        app:layout_constraintStart_toStartOf="@id/glStart"
        app:layout_constraintTop_toBottomOf="@id/tvPlaylist"
        tools:src="@color/purple_200" />

    <TextView
        android:id="@+id/tvSong"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_big"
        android:layout_marginEnd="@dimen/spacing_small"
        android:fontFamily="@font/rubik_medium"
        android:textAppearance="?attr/textAppearanceHeadline5"
        app:layout_constraintEnd_toStartOf="@id/ivFavorite"
        app:layout_constraintStart_toStartOf="@id/glStart"
        app:layout_constraintTop_toBottomOf="@id/ivSongCover"
        tools:text="Pure Souls" />

    <TextView
        android:id="@+id/tvArtist"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_micro"
        android:layout_marginEnd="@dimen/spacing_small"
        app:layout_constraintEnd_toStartOf="@id/ivFavorite"
        app:layout_constraintStart_toStartOf="@id/glStart"
        app:layout_constraintTop_toBottomOf="@id/tvSong"
        tools:text="Kanye West" />

    <ImageView
        android:id="@+id/ivFavorite"
        android:layout_width="@dimen/player_icon_size"
        android:layout_height="@dimen/player_icon_size"
        android:src="@drawable/ic_favorite"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/tvArtist"
        app:layout_constraintEnd_toEndOf="@id/glEnd"
        app:layout_constraintTop_toTopOf="@id/tvSong" />

    <SeekBar
        android:id="@+id/sPlayer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_default"
        android:layout_marginTop="@dimen/spacing_default"
        android:layout_marginEnd="@dimen/spacing_default"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvArtist" />

    <TextView
        android:id="@+id/tvDurationStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/player_duration_start"
        app:layout_constraintStart_toStartOf="@id/glStart"
        app:layout_constraintTop_toBottomOf="@id/sPlayer" />

    <TextView
        android:id="@+id/tvDurationEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/glEnd"
        app:layout_constraintTop_toBottomOf="@id/sPlayer"
        tools:text="3:40" />

    <ImageView
        android:id="@+id/ivShuffle"
        android:layout_width="@dimen/player_icon_size"
        android:layout_height="@dimen/player_icon_size"
        android:src="@drawable/ic_shuffle"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/ivPlay"
        app:layout_constraintStart_toStartOf="@id/glStart"
        app:layout_constraintTop_toBottomOf="@id/sPlayer"
        app:layout_constraintTop_toTopOf="@id/ivPlay" />

    <ImageView
        android:id="@+id/ivLyrics"
        android:layout_width="@dimen/player_icon_size"
        android:layout_height="@dimen/player_icon_size"
        android:src="@drawable/ic_lyrics"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/ivPlay"
        app:layout_constraintEnd_toEndOf="@id/glEnd"
        app:layout_constraintTop_toTopOf="@id/ivPlay" />

    <ImageView
        android:id="@+id/ivPlay"
        android:layout_width="@dimen/player_play_icon_size"
        android:layout_height="@dimen/player_play_icon_size"
        android:src="@drawable/ic_pause_filled"
        app:layout_constraintEnd_toEndOf="@id/glEnd"
        app:layout_constraintStart_toStartOf="@id/glStart"
        app:layout_constraintTop_toBottomOf="@id/tvDurationStart" />

    <ImageView
        android:id="@+id/ivPause"
        android:layout_width="@dimen/player_play_icon_size"
        android:layout_height="@dimen/player_play_icon_size"
        android:src="@drawable/ic_pause_filled"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/glEnd"
        app:layout_constraintStart_toStartOf="@id/glStart"
        app:layout_constraintTop_toBottomOf="@id/tvDurationStart" />

    <ImageView
        android:id="@+id/ivNext"
        android:layout_width="@dimen/player_nav_icon_size"
        android:layout_height="@dimen/player_nav_icon_size"
        android:src="@drawable/ic_next"
        app:layout_constraintBottom_toBottomOf="@id/ivPlay"
        app:layout_constraintStart_toEndOf="@id/ivPlay"
        app:layout_constraintTop_toTopOf="@id/ivPlay" />

    <ImageView
        android:id="@+id/ivPrevious"
        android:layout_width="@dimen/player_nav_icon_size"
        android:layout_height="@dimen/player_nav_icon_size"
        android:src="@drawable/ic_previous"
        app:layout_constraintBottom_toBottomOf="@id/ivPlay"
        app:layout_constraintEnd_toStartOf="@id/ivPlay"
        app:layout_constraintTop_toTopOf="@id/ivPlay" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="24dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>